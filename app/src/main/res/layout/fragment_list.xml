<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/fg_app_bar"
        layout="@layout/app_bar"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="56dp"
        android:id="@+id/fg_listview"/>

    <Button
        android:id="@+id/fg_newResident"
        android:layout_below="@+id/fg_listview"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="New Resident"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/deep_orange"
        android:layout_marginBottom="10dp"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="165dp" />

    <Button
        android:id="@+id/fg_existResident"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Current Resident"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fg_newResident"
        android:backgroundTint="@color/deep_orange"
        android:layout_marginBottom="10dp"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="165dp" />

</RelativeLayout>